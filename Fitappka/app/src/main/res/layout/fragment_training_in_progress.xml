<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/training_in_progress_background"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/training_in_progress_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="40dp"
        android:text="Trening"
        android:textSize="50sp"
        />

    <TextView
        android:id="@+id/training_in_progress_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/training_in_progress_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="40dp"
        android:textSize="40sp"
        android:text="Nazwa treningu"
        />

    <TextView
        android:id="@+id/training_in_progress_ex_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/training_in_progress_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="40dp"
        android:textSize="30sp"
        android:text="Nazwa ćwiczenia"
        />

<TextView
    android:id="@+id/training_in_progress_ex_info"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:layout_constraintTop_toBottomOf="@id/training_in_progress_ex_name"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    android:layout_marginTop="40dp"
    android:textSize="30sp"
    android:text="Info"
    />

    <Button
        android:id="@+id/next_ex_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/training_in_progress_ex_info"
        app:layout_constraintStart_toEndOf="@id/training_exit_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/training_scan_button"
        app:layout_constraintVertical_bias="0.7"
        android:text="DALEJ"
        android:textSize="30sp"
        />

    <Button
        android:id="@+id/training_exit_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/training_in_progress_ex_info"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/next_ex_button"
        app:layout_constraintBottom_toTopOf="@id/training_scan_button"
        app:layout_constraintBaseline_toBaselineOf="@id/next_ex_button"
        android:text="WYJDŹ"
        android:textSize="30sp"
        />

    <Button
        android:id="@+id/training_scan_button"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/training_exit_button"
        app:layout_constraintStart_toStartOf="@id/training_exit_button"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintEnd_toEndOf="@id/next_ex_button"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="40dp"
        android:text="Skanuj"
        android:textSize="30sp"


            />





</androidx.constraintlayout.widget.ConstraintLayout>
</layout>